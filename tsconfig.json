{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es7", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": true,
    "rootDirs": [
      "./",
      "src"
    ],
    "baseUrl": "./src",
    "jsx": "react",
  },
  "include": [
    "src",
    "stories"
  ],
  "exclude": [
    "**/*.stories.tsx"
  ]
}
